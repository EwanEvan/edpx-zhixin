{%extends 'c_right_base.tpl'%} {%block name='content'%}<div class="opr-weather2-container"><h2 class="opr-weather2-title c-gap-bottom-small">{%$tplData.title|escape%}</h2> <div class="opr-weather2-content"> <table class="opr-weather2-table" border="0" cellpadding="0" cellspacing="0"> {%foreach $tplData.daylist as $item%} <tr> <td class="opr-weather2-day">{%$item.day%}</td> <td class="opr-weather2-icon"><img src="{%$item.icon%}" data-nolog /></td> <td style="padding-right:0;"><span class="opr-weather2-desc">{%$item.desc|escape%}</span></td> <td align="right">{%$item.temp%}</td> </tr> {%/foreach%} </table> {%if $tplData.more%} <p class="opr-weather2-more"> <a href="{%$tplData.more[0]['url']%}" target="_blank">{%$tplData.more[0]['title']|escape%}</a> {%if $tplData.from%} <span class="opr-weather2-comefrom">来自：{%$tplData.from|escape%}</span> {%/if%} </p> {%/if%} </div> </div>{%/block%}